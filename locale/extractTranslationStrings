#!/bin/sh

#
#  STEP 1:
#  extract all evasys message strings and merge them with the existing translations
#

LOCALE_RELATIVE_PATH="."
TRANSLATIONFILES_RELAVITVE_PATHS="../views ../controllers ../assets ../lib ../EvasysPlugin.class.php ..EvasysWidget.class.php"

for language in en
do
	test -f "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.po" && mv "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.po" "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.po.old"
	> "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.pot"
	find $TRANSLATIONFILES_RELAVITVE_PATHS \( -iname "*.php" -o -iname "*.ihtml" \) | xargs xgettext --from-code=utf-8 -j -n --language=PHP -o "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.pot"
	test -f "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.po.old" && msgmerge "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.po.old" "$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.pot" --output-file="$LOCALE_RELATIVE_PATH/$language/LC_MESSAGES/evasys.po"
done
